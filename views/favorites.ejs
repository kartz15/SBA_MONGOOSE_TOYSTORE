<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= type %> Toys</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <h2><%= type %> Toys</h2>
        <section class="toy-list">
            <% toys.forEach(toy => { %>
                <div class="toy-card">
                    
                    <img src="<%= toy.url %>" alt="<%= toy.name %>">
                    <h3><%= toy.name %></h3>
                    <a href="/updateToy/<%= toy.id %>" class="btn">Edit Toy</a>
                    <a href="/deleteToy/<%= toy.id %>" class="btn">Delete Toy</a>
                    <!-- Favorite Icon -->
                    <a href="/favoriteToy/<%= toy.id %>" class="btn">
                        <i class="fa<%= toy.isFavorite ? 's' : 'r' %> fa-heart"></i>
                    </a>
                </div>
            <% }) %>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>
</html>
